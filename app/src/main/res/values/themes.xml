<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MLApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/dark_lavendar</item>
        <item name="colorOnPrimary">@color/dark_lavendar</item>
        <item name="colorPrimaryVariant">@color/dark_lavendar</item>
        <item name="android:statusBarColor">@color/dark_lavendar</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>

    <style name="Theme.MLApp" parent="Base.Theme.MLApp" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_lavendar</item>
        <item name = "windowSplashScreenAnimatedIcon">@drawable/ml_app_logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MLApp</item>
    </style>
</resources>